{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "jmatsen/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "jmatsen/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "jmatsen/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "jmatsen/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort":80
                },
                "links": ["client", "server"]
            ]
        }
    ]
}
